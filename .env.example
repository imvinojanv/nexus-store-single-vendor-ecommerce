# Part 1: Core Application & Database
# ------------------------------------------------------------------
# Prisma / PostgreSQL Connection String
# Replace with your actual database credentials.
DATABASE_URL="postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:YOUR_DB_PORT/nexus_store_db"

# Part 1: Authentication (Better-Auth / NextAuth.js)
# ------------------------------------------------------------------
# A secret key for signing tokens. Generate one with: openssl rand -base64 32
NEXTAUTH_SECRET="YOUR_32_BYTE_RANDOM_SECRET_HERE"

# The canonical URL of your production site.
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth Provider
GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID_HERE"
GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET_HERE"

# Facebook OAuth Provider
FACEBOOK_CLIENT_ID="YOUR_FACEBOOK_CLIENT_ID_HERE"
FACEBOOK_CLIENT_SECRET="YOUR_FACEBOOK_CLIENT_SECRET_HERE"


# Part 2: Payment & Notification Integrations
# ------------------------------------------------------------------
# Stripe Payment Gateway
STRIPE_PUBLIC_KEY="pk_test_YOUR_STRIPE_PUBLIC_KEY_HERE"
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_SECRET_KEY_HERE"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE"

# Mailgun Email Service
MAILGUN_API_KEY="YOUR_MAILGUN_API_KEY_HERE"
MAILGUN_DOMAIN="YOUR_MAILGUN_DOMAIN_HERE" # e.g., mg.yourdomain.com
MAILGUN_FROM_EMAIL="Nexus Store <orders@yourdomain.com>"

# text.lk SMS Service
TEXTLK_API_KEY="YOUR_TEXTLK_API_KEY_HERE"
TEXTLK_SENDER_ID="NexusStore" # The name that appears on the SMS